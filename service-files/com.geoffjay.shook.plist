<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.geoffjay.shook</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/shook</string>
        <string>--host</string>
        <string>127.0.0.1</string>
        <string>--config</string>
        <string>/usr/local/etc/shook/config.yml</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/usr/local/var/log/shook/stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/shook/stderr.log</string>

    <key>WorkingDirectory</key>
    <string>/usr/local/var/cache/shook</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
